<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F0FFF5">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo + Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/splash_image"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:alpha="0"
                android:src="@drawable/ic_intro4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agri_AI"
                    android:textSize="24sp"
                    android:textColor="#2E7D32"
                    android:fontFamily="sans-serif-medium"
                    android:alpha="0"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Farm Monitoring and Disease Detection"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:alpha="0"
                    android:background="@drawable/rounded_shadow_box"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Section Header -->
        <TextView
            android:id="@+id/section_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What This App Does"
            android:textSize="20sp"
            android:textColor="#1B5E20"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:alpha="0"/>

        <!-- Feature Cards Container -->
        <LinearLayout
            android:id="@+id/cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true">
        </LinearLayout>

        <!-- Let's Go Button -->
        <Button
            android:id="@+id/btn_lets_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Go"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:visibility="invisible"/>


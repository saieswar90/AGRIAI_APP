<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Crop Name -->
        <TextView
            android:id="@+id/cropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Year -->
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"/>

        <!-- Tractor Rent Cost -->
        <TextView
            android:id="@+id/tractorRentCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tractor Rent Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <!-- Labourer Cost -->
        <TextView
            android:id="@+id/labourerCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Labourer Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <!-- Fertilizer Cost -->
        <TextView
            android:id="@+id/fertilizerCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fertilizer Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <!-- Pesticide Cost -->
        <TextView
            android:id="@+id/pesticideCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesticide Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <!-- Harvesting Cost -->
        <TextView
            android:id="@+id/harvestingCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harvesting Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <!-- Total Cost -->
        <TextView
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cost: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <!-- Profit/Loss -->
        <TextView
            android:id="@+id/profitOrLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit/Loss: ₹0.00"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>